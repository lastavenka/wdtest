        mixin product-item(product)
          li(class="product")
            .product__wrap
              .product__inner
                img(src="img/product__img--" + product.img + ".jpg", class="product__img", alt=product.name)
                a(href="#", class="product__name")= product.name
                if (product.descr.length > 136)
                  - var slicedDescr = product.descr.slice(0, 133) + "..."
                  p.product__descr= slicedDescr
                else
                  p.product__descr= product.descr
              if product.price
                .product__price-cont
                  span.product__price= product.price + ' руб.'
                  button.product__btn.product__btn--buy В корзину
              else
                .product__price-cont.product__price-cont--request Цена по запросу
                  button.product__btn.product__btn--request Запросить цену
        ul.products__list
          each product in productsList
            +product-item(product)
        mixin product-table-item(product)
          tr
            td.product__table-cell.product__table-cell--name
              img(src="img/product__img--" + product.img + ".jpg", class="product__img product__img--table", alt=product.name)
              a(href="#", class="product__name product__name--table")= product.name
            td.product__table-cell.product__table-cell--type
              span.product__value= product.type
            td.product__table-cell.product__table-cell--power
              span.product__value= product.power
            td.product__table-cell
              span.product__value= product.voltage
            td.product__table-cell
              span.product__value= product.launching
            td.product__table-cell.product__table-cell--price
              if product.price
                span(class="product__price product__price--table")= product.price + ' руб.'
              else
                .product__price-request Цена по запросу
        table(class="products__table", style="display: none")
          thead
