              th.products__option.products__option--name Модель
              th.products__option.products__option--type Тип
              th.products__option.products__option--power Мощность
              th.products__option Напряжение
              th.products__option Тип запуска
              th.products__option.products__option--price Цена
          tbody
            each product in productsList
              +product-table-item(product)
